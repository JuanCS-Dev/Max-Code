{
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "echo '[PreToolUse] Bash command about to run: '$TOOL_NAME",
            "enabled": true
          }
        ]
      },
      {
        "matcher": "Edit|Write",
        "hooks": [
          {
            "type": "command",
            "command": "echo '[PreToolUse] File modification detected' && exit 0",
            "enabled": true
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "echo '[PostToolUse] Tool '$TOOL_NAME' completed'",
            "enabled": true
          }
        ]
      }
    ],
    "SessionStart": [
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "echo '[SessionStart] Session started from: '$SESSION_SOURCE",
            "enabled": true
          }
        ]
      }
    ],
    "SessionEnd": [
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "echo '[SessionEnd] Session terminated'",
            "enabled": true
          }
        ]
      }
    ],
    "UserPromptSubmit": [
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "echo '[UserPromptSubmit] User submitted prompt'",
            "enabled": true
          }
        ]
      }
    ],
    "Notification": [
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "echo '[Notification] '$NOTIFICATION_MESSAGE",
            "enabled": true
          }
        ]
      }
    ],
    "PreCompact": [
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "echo '[PreCompact] Context at '$CONTEXT_USAGE'/'$CONTEXT_LIMIT",
            "enabled": true
          }
        ]
      }
    ],
    "Stop": [
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "echo '[Stop] Claude finished responding'",
            "enabled": true
          }
        ]
      }
    ]
  }
}
