# Max-Code CLI Configuration
# Copy this file to .env and customize for your environment
# Or use: max-code init --profile <development|production|local>

# ==============================================================================
# ENVIRONMENT
# ==============================================================================
MAX_CODE_ENV=development  # development, production, local

# ==============================================================================
# CLAUDE API (Required for multi-agent system)
# ==============================================================================
# Get your API key from: https://console.anthropic.com/
ANTHROPIC_API_KEY=your_api_key_here

CLAUDE_MODEL=claude-sonnet-4-5-20250929
CLAUDE_TEMPERATURE=0.7
CLAUDE_MAX_TOKENS=4096

# ==============================================================================
# MAXIMUS BACKEND SERVICES
# ==============================================================================

# MAXIMUS Core Service (consciousness, predictive coding, neuromodulation)
MAXIMUS_CORE_URL=http://localhost:8150

# Penelope Service (NLP, healing, 7 Biblical Articles)
MAXIMUS_PENELOPE_URL=http://localhost:8154

# Orchestrator Service (workflow coordination)
MAXIMUS_ORCHESTRATOR_URL=http://localhost:8027

# Oraculo Service (prediction, forecasting)
MAXIMUS_ORACULO_URL=http://localhost:8026

# Atlas Service (context, environment)
MAXIMUS_ATLAS_URL=http://localhost:8007

# Service Configuration
MAXIMUS_TIMEOUT=30  # Request timeout in seconds
MAXIMUS_MAX_RETRIES=3  # Maximum retry attempts

# ==============================================================================
# MAXIMUS FEATURES
# ==============================================================================

# Enable ESGT consciousness integration
MAXIMUS_ENABLE_CONSCIOUSNESS=true

# Enable predictive coding (5-layer hierarchy)
MAXIMUS_ENABLE_PREDICTION=true

# Enable neuromodulation (Dopamine, ACh, NE, 5-HT)
MAXIMUS_ENABLE_NEUROMODULATION=true

# ==============================================================================
# MAX-CODE FEATURES
# ==============================================================================

# Enable Constitutional AI v3.0 framework
MAX_CODE_ENABLE_CONSTITUTIONAL=true

# Enable multi-agent system (Sophia, Code, Test, Review, Guardian)
MAX_CODE_ENABLE_MULTI_AGENT=true

# Enable Tree of Thoughts visualization
MAX_CODE_ENABLE_TOT=true

# ==============================================================================
# UI/UX CONFIGURATION
# ==============================================================================

# Banner style: default, isometric, banner, bold, tech, cyber
MAX_CODE_BANNER_STYLE=default

# Disable banner
MAX_CODE_NO_BANNER=false

# Disable colors
NO_COLOR=false

# Minimal output mode
MAX_CODE_QUIET=false

# Detailed output mode
MAX_CODE_VERBOSE=false

# Show progress indicators
MAX_CODE_SHOW_PROGRESS=true

# Show agent activity dashboard
MAX_CODE_SHOW_AGENTS=true

# Show consciousness state (ESGT ignitions)
MAX_CODE_SHOW_CONSCIOUSNESS=true

# ==============================================================================
# LOGGING
# ==============================================================================

# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# Log file path (leave empty for stdout only)
MAX_CODE_LOG_FILE=

# Log format: text, json
MAX_CODE_LOG_FORMAT=text

# Enable OpenTelemetry tracing
MAX_CODE_ENABLE_TRACING=false

# ==============================================================================
# PATHS
# ==============================================================================

# User configuration directory (default: ~/.max-code)
MAX_CODE_CONFIG_DIR=

# ==============================================================================
# NOTES
# ==============================================================================

# Profile Presets:
# - development: All features enabled, verbose logging, localhost services
# - production: Optimized for deployment, JSON logging, production URLs
# - local: Standalone mode without MAXIMUS backend (direct Claude API)

# Quick Setup:
# 1. Copy this file: cp .env.example .env
# 2. Add your Claude API key
# 3. Run: max-code init --profile development
# 4. Start using: max-code --help

# For detailed configuration, see: docs/CONFIGURATION.md
