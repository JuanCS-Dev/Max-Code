{
  "dashboard": {
    "id": null,
    "uid": "maximus-consciousness",
    "title": "MAXIMUS Consciousness Metrics",
    "tags": ["maximus", "consciousness", "arousal", "esgt"],
    "timezone": "browser",
    "schemaVersion": 38,
    "version": 1,
    "refresh": "10s",
    "panels": [
      {
        "id": 1,
        "gridPos": { "h": 10, "w": 24, "x": 0, "y": 0 },
        "type": "graph",
        "title": "Arousal Level Over Time",
        "targets": [
          {
            "expr": "maximus_arousal_level",
            "legendFormat": "Arousal",
            "refId": "A"
          }
        ],
        "yaxes": [
          {
            "label": "arousal (0.0-1.0)",
            "show": true,
            "max": 1.0,
            "min": 0.0
          }
        ],
        "alert": {
          "name": "High Arousal Alert",
          "conditions": [
            {
              "evaluator": {
                "params": [0.8],
                "type": "gt"
              },
              "query": {
                "params": ["A", "5m", "now"]
              },
              "reducer": {
                "type": "avg"
              },
              "type": "query"
            }
          ]
        },
        "fieldConfig": {
          "defaults": {
            "custom": {
              "fillOpacity": 20,
              "lineInterpolation": "smooth",
              "spanNulls": true
            }
          }
        }
      },
      {
        "id": 2,
        "gridPos": { "h": 8, "w": 12, "x": 0, "y": 10 },
        "type": "stat",
        "title": "Current Arousal",
        "targets": [
          {
            "expr": "maximus_arousal_level",
            "refId": "A"
          }
        ],
        "options": {
          "graphMode": "area",
          "colorMode": "value",
          "textMode": "value_and_name",
          "orientation": "auto"
        },
        "fieldConfig": {
          "defaults": {
            "unit": "percentunit",
            "decimals": 2,
            "thresholds": {
              "mode": "absolute",
              "steps": [
                { "value": null, "color": "green" },
                { "value": 0.6, "color": "yellow" },
                { "value": 0.8, "color": "red" }
              ]
            },
            "color": {
              "mode": "thresholds"
            }
          }
        }
      },
      {
        "id": 3,
        "gridPos": { "h": 8, "w": 12, "x": 12, "y": 10 },
        "type": "stat",
        "title": "ESGT Events (1h)",
        "targets": [
          {
            "expr": "increase(maximus_esgt_events_total[1h])",
            "refId": "A"
          }
        ],
        "options": {
          "graphMode": "area",
          "colorMode": "value",
          "textMode": "value_and_name"
        },
        "fieldConfig": {
          "defaults": {
            "unit": "short",
            "color": {
              "mode": "palette-classic"
            }
          }
        }
      },
      {
        "id": 4,
        "gridPos": { "h": 8, "w": 8, "x": 0, "y": 18 },
        "type": "gauge",
        "title": "System Health",
        "targets": [
          {
            "expr": "maximus_system_health",
            "refId": "A"
          }
        ],
        "options": {
          "showThresholdLabels": true,
          "showThresholdMarkers": true
        },
        "fieldConfig": {
          "defaults": {
            "unit": "percent",
            "thresholds": {
              "mode": "absolute",
              "steps": [
                { "value": 0, "color": "red" },
                { "value": 50, "color": "yellow" },
                { "value": 80, "color": "green" }
              ]
            },
            "mappings": [
              {
                "options": {
                  "0": { "text": "CRITICAL" },
                  "50": { "text": "DEGRADED" },
                  "100": { "text": "HEALTHY" }
                },
                "type": "value"
              }
            ],
            "max": 100,
            "min": 0
          }
        }
      },
      {
        "id": 5,
        "gridPos": { "h": 8, "w": 8, "x": 8, "y": 18 },
        "type": "stat",
        "title": "Consciousness Snapshots (24h)",
        "targets": [
          {
            "expr": "count_over_time(maximus_consciousness_snapshot[24h])",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "short",
            "color": {
              "mode": "palette-classic"
            }
          }
        }
      },
      {
        "id": 6,
        "gridPos": { "h": 8, "w": 8, "x": 16, "y": 18 },
        "type": "stat",
        "title": "Avg Arousal (24h)",
        "targets": [
          {
            "expr": "avg_over_time(maximus_arousal_level[24h])",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "percentunit",
            "decimals": 2,
            "color": {
              "mode": "palette-classic"
            }
          }
        }
      },
      {
        "id": 7,
        "gridPos": { "h": 8, "w": 24, "x": 0, "y": 26 },
        "type": "table",
        "title": "Recent ESGT Events",
        "targets": [
          {
            "expr": "maximus_esgt_events",
            "format": "table",
            "instant": false,
            "refId": "A"
          }
        ],
        "options": {
          "showHeader": true,
          "sortBy": [{ "displayName": "Time", "desc": true }]
        },
        "fieldConfig": {
          "overrides": [
            {
              "matcher": { "id": "byName", "options": "event_type" },
              "properties": [
                {
                  "id": "displayName",
                  "value": "Event Type"
                }
              ]
            }
          ]
        },
        "transformations": [
          {
            "id": "organize",
            "options": {
              "excludeByName": {
                "__name__": true,
                "job": true,
                "instance": true
              }
            }
          }
        ]
      }
    ],
    "time": {
      "from": "now-6h",
      "to": "now"
    }
  },
  "overwrite": true
}
