{
  "dashboard": {
    "id": null,
    "uid": "maximus-database",
    "title": "MAXIMUS Database & Cache Metrics",
    "tags": ["maximus", "database", "postgresql", "redis"],
    "timezone": "browser",
    "schemaVersion": 38,
    "version": 1,
    "refresh": "30s",
    "panels": [
      {
        "id": 1,
        "gridPos": { "h": 8, "w": 12, "x": 0, "y": 0 },
        "type": "graph",
        "title": "PostgreSQL Query Rate",
        "targets": [
          {
            "expr": "rate(pg_stat_database_tup_returned{datname=\"maximus\"}[5m])",
            "legendFormat": "Rows returned/sec",
            "refId": "A"
          },
          {
            "expr": "rate(pg_stat_database_tup_fetched{datname=\"maximus\"}[5m])",
            "legendFormat": "Rows fetched/sec",
            "refId": "B"
          }
        ],
        "yaxes": [
          {
            "label": "rows/sec",
            "show": true
          }
        ]
      },
      {
        "id": 2,
        "gridPos": { "h": 8, "w": 12, "x": 12, "y": 0 },
        "type": "graph",
        "title": "PostgreSQL Connections",
        "targets": [
          {
            "expr": "pg_stat_database_numbackends{datname=\"maximus\"}",
            "legendFormat": "Active connections",
            "refId": "A"
          }
        ],
        "yaxes": [
          {
            "label": "connections",
            "show": true
          }
        ]
      },
      {
        "id": 3,
        "gridPos": { "h": 8, "w": 12, "x": 0, "y": 8 },
        "type": "graph",
        "title": "Redis Cache Hit Rate",
        "targets": [
          {
            "expr": "rate(redis_keyspace_hits_total[5m]) / (rate(redis_keyspace_hits_total[5m]) + rate(redis_keyspace_misses_total[5m])) * 100",
            "legendFormat": "Hit rate %",
            "refId": "A"
          }
        ],
        "yaxes": [
          {
            "label": "hit rate %",
            "show": true,
            "max": 100,
            "min": 0
          }
        ]
      },
      {
        "id": 4,
        "gridPos": { "h": 8, "w": 12, "x": 12, "y": 8 },
        "type": "graph",
        "title": "Redis Memory Usage",
        "targets": [
          {
            "expr": "redis_memory_used_bytes",
            "legendFormat": "Used memory",
            "refId": "A"
          },
          {
            "expr": "redis_memory_max_bytes",
            "legendFormat": "Max memory",
            "refId": "B"
          }
        ],
        "yaxes": [
          {
            "label": "bytes",
            "show": true,
            "format": "bytes"
          }
        ]
      },
      {
        "id": 5,
        "gridPos": { "h": 8, "w": 8, "x": 0, "y": 16 },
        "type": "stat",
        "title": "Database Size",
        "targets": [
          {
            "expr": "pg_database_size_bytes{datname=\"maximus\"}",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "bytes",
            "color": {
              "mode": "palette-classic"
            }
          }
        }
      },
      {
        "id": 6,
        "gridPos": { "h": 8, "w": 8, "x": 8, "y": 16 },
        "type": "stat",
        "title": "Redis Keys",
        "targets": [
          {
            "expr": "redis_keys",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "short",
            "color": {
              "mode": "palette-classic"
            }
          }
        }
      },
      {
        "id": 7,
        "gridPos": { "h": 8, "w": 8, "x": 16, "y": 16 },
        "type": "stat",
        "title": "DB Connections Pool",
        "targets": [
          {
            "expr": "sum(pg_stat_database_numbackends)",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "short",
            "thresholds": {
              "mode": "absolute",
              "steps": [
                { "value": null, "color": "green" },
                { "value": 80, "color": "yellow" },
                { "value": 95, "color": "red" }
              ]
            },
            "color": {
              "mode": "thresholds"
            },
            "max": 100,
            "min": 0
          }
        }
      }
    ],
    "time": {
      "from": "now-1h",
      "to": "now"
    }
  },
  "overwrite": true
}
