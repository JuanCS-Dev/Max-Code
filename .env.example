# ============================================================================
# MAXIMUS AI - Environment Variables Template
# ============================================================================
# Copy this file to .env and fill in your actual values
# ============================================================================

# ----------------------------------------------------------------------------
# API KEYS (REQUIRED)
# ----------------------------------------------------------------------------

# Anthropic Claude API Key (used by Core, PENELOPE, MABA, NIS)
ANTHROPIC_API_KEY=sk-ant-your-api-key-here

# Google Gemini API Key (used by Or√°culo)
GEMINI_API_KEY=your-gemini-api-key-here

# ----------------------------------------------------------------------------
# DATABASE CREDENTIALS
# ----------------------------------------------------------------------------

# PostgreSQL
POSTGRES_PASSWORD=maximus_secure_password_change_me
POSTGRES_USER=maximus
POSTGRES_DB=maximus

# Neo4j (for MABA cognitive map)
NEO4J_PASSWORD=maximus_neo4j_secure_password

# ----------------------------------------------------------------------------
# MONITORING & OBSERVABILITY
# ----------------------------------------------------------------------------

# Grafana
GRAFANA_USER=admin
GRAFANA_PASSWORD=secure_grafana_password

# Prometheus (auto-configured, usually no changes needed)
PROMETHEUS_URL=http://prometheus:9090

# Jaeger Tracing (optional)
JAEGER_ENDPOINT=
JAEGER_AGENT_HOST=jaeger
JAEGER_AGENT_PORT=6831

# OTLP Tracing (optional)
OTLP_ENDPOINT=
OTLP_INSECURE=true

# ----------------------------------------------------------------------------
# SERVICE CONFIGURATION
# ----------------------------------------------------------------------------

# Log Level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# PENELOPE Sabbath Observance
SABBATH_ENABLED=true

# NIS/MVP Settings
CACHE_ENABLED=true
COST_TRACKING_ENABLED=true

# MABA Headless Browser
HEADLESS_BROWSER=true

# ----------------------------------------------------------------------------
# KAFKA (for DLQ Monitor)
# ----------------------------------------------------------------------------

# Kafka Bootstrap Servers (if using Kafka)
KAFKA_BOOTSTRAP_SERVERS=kafka:9092

# ----------------------------------------------------------------------------
# SERVICE URLS (Direct service-to-service communication)
# ----------------------------------------------------------------------------
# Note: Service Registry removed. Services now use direct URLs via env vars.

# Core Services
MAXIMUS_CORE_URL=http://maximus-core:8150
MABA_URL=http://maba:8152
NIS_URL=http://nis:8153
PENELOPE_URL=http://penelope:8151

# JWT Authentication
JWT_SECRET=change_me_to_a_strong_random_secret_in_production
JWT_EXPIRE_MINUTES=60

# Internal API Keys (comma-separated for service-to-service auth)
# Used for service-to-service communication as alternative to JWT
INTERNAL_API_KEYS=

# ----------------------------------------------------------------------------
# CONSTITUTIONAL FRAMEWORK
# ----------------------------------------------------------------------------

CONSTITUTION_VERSION=3.0
FRAMEWORK=DETER-AGENT

# ----------------------------------------------------------------------------
# DEVELOPMENT / PRODUCTION MODE
# ----------------------------------------------------------------------------

ENVIRONMENT=development
DEBUG=false
