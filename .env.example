# Max-Code CLI Configuration
# Copy to .env and configure

# ==================== AUTHENTICATION ====================

# OAuth Token (RECOMMENDED - uses your Claude Max x20 plan)
# Generated automatically via: max-code login
# Stored in: ~/.max-code/.credentials.json
# NO need to set manually

# Setup Token (for CI/CD - optional)
# Get via: claude setup-token
# CLAUDE_CODE_OAUTH_TOKEN=sk-ant-oat01-...

# API Key (FALLBACK - consumes API credits)
# Get from: https://console.anthropic.com/settings/keys
# ANTHROPIC_API_KEY=sk-ant-api...

# ==================== MAXIMUS INTEGRATION ====================

# Maximus Core URL (when available)
MAXIMUS_CORE_URL=http://localhost:8150

# TRINITY Services
PENELOPE_URL=http://localhost:8151
MABA_URL=http://localhost:8152
NIS_URL=http://localhost:8153

# ==================== DEVELOPMENT ====================

# Debug mode
DEBUG=false

# Log level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# ==================== CONSTITUTIONAL SETTINGS ====================

# Enforce P1-P6 strictly (recommended: true)
CONSTITUTIONAL_STRICT_MODE=true

# Auto-refresh tokens (recommended: true)
AUTO_REFRESH_TOKENS=true

# DETER-AGENT enabled (recommended: true)
DETER_AGENT_ENABLED=true
